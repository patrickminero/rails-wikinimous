<div class="container">
  <div class="d-flex align-items-baseline border-bottom">
    <h1 class="text-muted font-weight-normal"><%= @article.title %></h1>
    <%= link_to '<i class="fas fa-pencil-alt mx-2"></i>'.html_safe, edit_path(@article) %>
    <%= link_to '<i class="fas fa-trash-alt mx-2"></i>'.html_safe,
                article_path(@article),
                method: :delete,
                data: { confirm: "Are you sure?" } %>
  </div>
  <h2 class="font-weight-light"><%= @article.content %></h2>
</div>
